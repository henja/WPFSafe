<Window x:Class="WPFSafe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSafe"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" />
                <MenuItem Header="_Open" />
                <MenuItem Header="_Save" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>

        <StackPanel Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="91*" />
                    <ColumnDefinition Width="300*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel>

                </StackPanel>

                <StackPanel Grid.Column="0" Grid.Row="1">
                    <TextBlock Text="Customer" Margin="0,0,10,0" />
                    <TextBox Text="customer search box" Margin="0,0,10,0"/>
                    <ListBox Height="350" Margin="0,0,10,0"></ListBox>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="0">
                    <TextBox Text="data search box"></TextBox>
                </StackPanel>
                <TabControl Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="auto" Width="auto">

                    <TabItem Header="Data" >
                        <!--"<Grid Background="#FFE5E5E5"/> -->
                        <TextBox TextWrapping="Wrap" AcceptsReturn="True" Grid.Column="1" Height="Auto" Width="Auto" Margin="0,0,0,0" />
                    </TabItem>
                    <TabItem Header="Misc" >
                        <!--"<Grid Background="#FFE5E5E5"/> -->
                        <TextBox TextWrapping="Wrap" AcceptsReturn="True" Grid.Column="1" Height="Auto" Width="Auto" Margin="0,0,0,0" />
                    </TabItem>
                </TabControl>

            </Grid>

        </StackPanel>
    </DockPanel>
</Window>
